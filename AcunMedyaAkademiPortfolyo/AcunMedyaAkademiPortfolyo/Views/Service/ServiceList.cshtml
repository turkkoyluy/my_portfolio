@model List<AcunMedyaAkademiPortfolyo.Models.TblService>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetlerim</h2>
<table class="table table-bordered">
    <tr>
        <th>Hizmet Id</th>
        <th>Hizmet İsmi</th>
        <th>Açıklama</th>
        <th>Resim</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServicesID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:100px;height:150px" /></td>
            <td><a href="/Service/DeleteService/@item.ServicesID" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Service/CreateService" class="btn btn-primary">Yeni Hizmet Girişi</a>

