@model List<AcunMedyaAkademiPortfolyo.Models.TblTesrimonial>
@{
    ViewBag.Title = "TesrimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Refaranslar Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Refarans Id</th>
        <th>Referans Başlığı</th>
        <th>Açıklama</th>
        <th>İsim Soyisim</th>
        <th>Resim Yolu</th>
        <th>Meslek</th>
        <th>Statü</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.TesrimonialID</td>
        <td>@item.Title</td>
        <td>@item.Description</td>
        <td>@item.NameSurname</td>
        <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px;height:150px" /></td>
        <td>@item.Job</td>
        <td>@item.Status</td>

        <td><a href="/Tesrimonial/DeleteTesrimonial/@item.TesrimonialID" class="btn btn-danger">Sil</a></td>
        <td><a href="#" class="btn btn-success">Güncelle</a></td>
    </tr>
    }
</table>
<a href="/Tesrimonial/CreateTesrimonial/" class="btn btn-primary">Yeni Refarans Girişi</a>


