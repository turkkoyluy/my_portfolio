@model List<AcunMedyaAkademiPortfolyo.Models.TblService>
<div id="services" class="section lb">
    <div class="container">
        <div class="section-title text-left">
            <h3>HİZMETLERİM</h3>
            <p>İstenilen projeler en hızlı şekilde teslim edilmektedir.</p>
        </div><!-- end title -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="services-inner-box">
                        <div class="ser-icon">
                            <i class="@item.ImageUrl"></i>
                        </div>
                        <h2>@item.Title</h2>
                        <p>@item.Description</p>
                    </div><!-- end services-inner-box -->
                </div><!-- end col -->
            }
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->
